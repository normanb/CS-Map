	cd $(MAKEDIR)\Dictionaries
	$(MAKE) /fCompiler.nmk "VERSION=$(VERSION)" \
						   "CONFIGURATION=$(CONFIGURATION)" \
						   "PROCESSOR=$(PROCESSOR)" \
						   "CC_FLG=$(CC_FLG)" \
						   "CPP_FLG=$(CPP_FLG)" \
						   clean
	cd $(MAKEDIR)/TestCpp
	$(MAKE) /fTestCpp.nmk "VERSION=$(VERSION)" \
						  "CONFIGURATION=$(CONFIGURATION)" \
						  "PROCESSOR=$(PROCESSOR)" \
						  "CC_FLG=$(CC_FLG)" \
						  "CPP_FLG=$(CPP_FLG)" \
						  clean
	cd $(MAKEDIR)

RebuildRelease :
	cd $(MAKEDIR)\Source
	$(MAKE) /fLibrary.nmk "VERSION=$(VERSION)" \
						  "CONFIGURATION=$(CONFIGURATION)" \
						  "PROCESSOR=$(PROCESSOR)" \
						  "CC_FLG=$(CC_FLG)" \
						  "CPP_FLG=$(CPP_FLG)" \
						  rebuild
	cd $(MAKEDIR)\Dictionaries
	$(MAKE) /fCompiler.nmk "VERSION=$(VERSION)" \
						   "CONFIGURATION=$(CONFIGURATION)" \
						   "PROCESSOR=$(PROCESSOR)" \
						   "CC_FLG=$(CC_FLG)" \
						   "CPP_FLG=$(CPP_FLG)" \
						   rebuild
	cd $(MAKEDIR)/TestCpp
	$(MAKE) /fTestCpp.nmk "VERSION=$(VERSION)" \
						  "CONFIGURATION=$(CONFIGURATION)" \
						  "PROCESSOR=$(PROCESSOR)" \
						  "CC_FLG=$(CC_FLG)" \
						  "CPP_FLG=$(CPP_FLG)" \
						  rebuild
	cd $(MAKEDIR)

Test :
	$(EXE_DIR)\csTestCpp.exe /d.\Dictionaries /e /b .\TestCpp\TEST.DAT

QuickTest :
	$(EXE_DIR)\csTestCpp.exe /d.\Dictionaries /e /b /t12345 .\TestCpp\TEST.DAT

