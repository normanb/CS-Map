	cd $(MAKEDIR)\Source
	$(MAKE) /fLibrary.nmk "VERSION=$(VERSION)" \
						  "CONFIGURATION=$(CONFIGURATION)" \
						  "PROCESSOR=$(PROCESSOR)" \
						  "CC_FLG=$(CC_FLG)" \
						  "CPP_FLG=$(CPP_FLG)" \
